<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:colorPrimary">@color/primary_dark_green</item>
        <item name="android:textColorPrimary">@color/primary_white</item>
        <item name="android:colorPrimaryDark">@color/secondary_dark_green</item>
        <item name="android:navigationBarColor">@color/secondary_dark_green</item>
        <item name="android:colorAccent">@color/primary_white</item>
    </style>

    <style name="ActionBarTheme" parent="BaseTheme">
        <item name="android:colorAccent">@color/primary_white</item>
    </style>

    <style name="AppTheme.SearchListItem" parent="BaseTheme">
        <item name="android:padding">5dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:background">@color/primary_white</item>
    </style>

    <style name="mainTitle" parent="BaseTheme">
        <item name="android:textColor">@color/primary_black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subTitle" parent="BaseTheme">
        <item name="android:textColor">@color/secondary_black</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:overlapAnchor">true</item>
    </style>

</resources>