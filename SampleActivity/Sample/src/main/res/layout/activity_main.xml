<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sails.example.MainActivity">


    <include android:id="@+id/toolbar"
        layout="@layout/app_bar"></include>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar"
        android:id="@+id/SAILSMap" />

    <RelativeLayout
        android:id="@+id/infoDock"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="3dp"
        android:background="@color/primary_dark_green"
        android:layout_alignParentBottom="true"
        android:visibility="visible">
        <TextView
            android:id="@+id/displayFloorName"
            android:textColor="@color/primary_white"
            android:padding="5dp"
            android:textSize="20dp"
            android:gravity="center_vertical|start"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/displayFloorRegionName"
            android:textColor="@color/primary_white"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_below="@+id/displayFloorName"
            ></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/infoDock"
        android:layout_below="@id/toolbar">

        <ImageView
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:id="@+id/zoomin"
            android:src="@drawable/zoominb"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:id="@+id/zoomout"
            android:baselineAlignBottom="false"
            android:src="@drawable/zoomoutb"
            android:layout_below="@+id/zoomin"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"/>

        // za
        <Button
            android:id="@+id/direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direction"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <ListView
        android:id="@+id/listview"
        android:layout_below="@+id/toolbar"
        android:background="@color/primary_white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textFilterEnabled="false"
        android:divider="@color/light_grey"/>

</RelativeLayout>
